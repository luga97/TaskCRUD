<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white">
        <form action="/tasks/{{task._id}}/edit" method="post">
          <h1 class="text-center">Update a task</h1>
          <div class="mb-3">
            <label for="title">Write a title</label>
            <input
              type="text"
              name="title"
              id="title"s
              placeholder="Title"
              value="{{task.title}}"
              class="form-control rounded-0 bg-dark text-white"
            />
          </div>
          <div class="mb-3">
            <label for="description">Write a description</label>
            <textarea
              name="description"
              id="description"
              placeholder="Description"
              class="form-control rounded-0 bg-dark text-white"
            >{{task.description}}</textarea>
          </div>
          <button class="btn btn-primary btn-sm mt-2" type="submit">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>